.info {
    margin: 12px 0 4px 16px;
    padding: 8px;
}
.section {
    margin: 0 0 4px 16px;
}

.row {
    flex-direction: row;
    align-items: flex-end;
}
.row-content {
    margin-left: 32px;
    flex-grow: 1;
}
.row-caption {
    margin-left: 8px;
}

.title {
    -unity-font-definition: url("Font-Tagesschrift-Regular-SDF.asset");
    -unity-font-style: bold;
    font-size: 16px;
    margin-top: 8px;
    margin-bottom: 2px;
}
.text {
    -unity-font-definition: url("Font-RubikMonoOne-Regular-SDF.asset");
}
